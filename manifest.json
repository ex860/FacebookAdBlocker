{
    "manifest_version": 3,
    "name": "Facebook Ad Blocker",
    "description": "Hide the sponsored and recommended posts on Facebook",
    "version": "1.0.0",
    "icons": {
        "16": "logo16.png",
        "48": "logo48.png",
        "128": "logo128.png"
    },
    "permissions": ["tabs"],
    "host_permissions": [
        "http://www.facebook.com/"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["content_scripts.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}